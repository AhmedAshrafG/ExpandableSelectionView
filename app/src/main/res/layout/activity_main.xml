<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="16dp"
	tools:context=".MainActivity"
	>

	<com.ashraf007.expandable_selection_view.ExpandableSingleSelectionView
		android:id="@+id/expandableSelectionView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:dividerVisibility="true"
		app:maximumHeight="200dp"
		android:background="@drawable/bg_expandable_selection_view"
		android:layout_marginBottom="16dp"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="I'm gonna be pushed down"
		tools:ignore="HardcodedText"
		/>

</LinearLayout>